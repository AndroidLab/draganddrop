<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/returnBackLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_back_and_frame_hard"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="50dp"/>

        <include
            android:id="@+id/dragObjects"
            layout="@layout/drag_objects"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="25dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/returnBackCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Return back" />

            <CheckBox
                android:id="@+id/frameHardCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frame hard" />

        </LinearLayout>

    </FrameLayout>

</layout>